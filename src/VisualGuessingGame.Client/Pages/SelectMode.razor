@page "/"
@inject NavigationManager Navigation
@inject IHttpClientFactory HttpClientFactory
@attribute [Authorize]

<MudStack Spacing="8" Row="true">
    <MudCard onclick="@(() => OnConfigure())">
        <MudCardContent>
            <MudImage Src="images/configure-button.png" Height="200"></MudImage>
        </MudCardContent>
        <MudCardActions Class="d-flex justify-center">
            <MudText Typo="Typo.h6">Configure</MudText>
        </MudCardActions>
    </MudCard>
    <MudCard onclick="@(() => OnPlay())">
        <MudCardContent>
            <MudImage Src="images/play-button.png" Height="200"></MudImage>
        </MudCardContent>
        <MudCardActions Class="d-flex justify-center">
            <MudText Typo="Typo.h6">Play</MudText>
        </MudCardActions>
    </MudCard>
</MudStack>

@code {
    public void OnConfigure()
    {
        Navigation.NavigateTo("generate");
    }

    public void OnPlay()
    {
        Navigation.NavigateTo("selectgame");
    }
}
