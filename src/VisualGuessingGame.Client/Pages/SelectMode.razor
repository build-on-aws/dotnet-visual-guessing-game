@page "/"
@inject NavigationManager Navigation
@inject IHttpClientFactory HttpClientFactory
@attribute [Authorize]

<MudStack Spacing="8" Row="true">
    <MudButton Variant="Variant.Filled" OnClick="OnConfigure">
        <MudStack>
            <MudImage Src="images/configure-button.png" Height="200" Width="200"></MudImage>
            <MudText Typo="Typo.h6">Configure</MudText>
        </MudStack>
    </MudButton>
    <MudButton Variant="Variant.Filled" OnClick="OnPlay">
        <MudStack>
            <MudImage Src="images/play-button.png" Height="200" Width="200"></MudImage>
            <MudText Typo="Typo.h6">Play</MudText>
        </MudStack>
    </MudButton>
</MudStack>

@code {
    public void OnConfigure()
    {
        Navigation.NavigateTo("generate");
    }

    public void OnPlay()
    {
        Navigation.NavigateTo("selectgame");
    }
}
